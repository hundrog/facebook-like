      <div class="card-action">
        <%= link_to 'Sign Up', new_user_registration_path, class:"waves-effect waves-teal btn teal white-text" %>
        <%# link_to 'About', "#", class:"waves-effect waves-teal btn blue white-text" %>
        <%= link_to 'GuitHub', 'https://github.com/hundrog/facebook-like', 
                    class:"waves-effect waves-teal btn blue darken-4 white-text", 
                    target: "_blank", rel: "nofollow" %>
      </div>
    </div>
  </div>
</div>
