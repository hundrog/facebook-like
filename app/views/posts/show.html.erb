<div class="row">
  <div class="col s12 m8 offset-m2 l8 offset-l2">
    <div class="right">
      <%= link_to 'Back', posts_path, class:"btn deep-orange" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m8 offset-m2 l8 offset-l2">
    <div class="card">
      <div class="card-content">
        <span class="card-title"></span>
        <p><%= @post.content %></p>
        <br>
        <br>
        <div class="right-align">
          <small>Posted by:<%= link_to " #{@post.user.username}", '#' %> <br>
            <%= time_ago_in_words(@post.created_at) %> ago,
            last updated: <%= time_ago_in_words(@post.updated_at) %> ago</small>
          <%= render 'posts/likes_count', obj: @post if @post.likes.count > 0 %>
        </div>
      </div>
      <div class="card-action center-align">
        <%= render 'posts/likes_links', obj: @post %>
        <% if @post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(@post), class:"btn teal darken-2" %>
          &nbsp;
          <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn deep-orange accent-4" %>
        <% end %>
      </div>
    </div>
    <br>
  </div>
</div>
<div class="row">
  <div class="col s12 m8 offset-m2 l8 offset-l2">
    <h4>Make a comment</h4>
    <%= render 'comments/form' %>
  </div>
</div>
<div class="row">
  <div class="col s12 m8 offset-m2 l8 offset-l2">
    <h4>Comments</h4>
    <%= render 'comments/comments', obj: @comments %>
  </div>
</div>
