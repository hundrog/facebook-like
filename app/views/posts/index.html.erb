<div class="row">
  <div class="col s12 m8 offset-m2 l8 offset-l2">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col s6 m6 l6">
        <h1>Posts</h1>
      </div>
      <div class="col s6 m6 l6 right-align">
        <%= link_to '<i class="material-icons">add</i>'.html_safe, new_post_path, class:"btn-floating btn-large waves-effect waves-light deep-orange accent-4" %>
      </div>
    </div>
  </div>
</div>
<div class="center-align"><%= will_paginate @collection %></div>
<% @posts.each do |post| %>
  <div class="row">
    <div class="col s12 m8 offset-m2 l8 offset-l2">
      <div class="card">
        <div class="card-content">
          <span class="card-title">
          </span>
          <p><%= post.content %></p>
          <br>
          <br>
          <div class="right-align">
            <small>Posted by:<%= link_to " #{post.user.username}", '#' %> <br>
              <%= time_ago_in_words(post.created_at) %> ago,
              last updated: <%= time_ago_in_words(post.updated_at) %> ago</small>
          </div>
        </div>
        <div class="card-action center-align">
          <%= link_to 'Like', '#', class: "" %>
          <%= link_to 'Comment', '#', class: "" %>
          <%= link_to 'View', post %>
          <%# link_to 'Edit', edit_post_path(post) %>
          <%# link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="center-align"><%= will_paginate @collection %></div>
<br>
